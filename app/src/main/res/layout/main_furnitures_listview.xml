<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/furniture_image"
        android:layout_width="94dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/furniture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/furniture_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/furniture_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/furniture_image"
        app:layout_constraintTop_toBottomOf="@+id/furniture_title" />

    <Button
        android:id="@+id/furniture_detail"
        android:layout_width="87dp"
        android:layout_height="33dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/furniture_detail_more"
        app:layout_constraintStart_toEndOf="@+id/furniture_image"
        app:layout_constraintTop_toBottomOf="@+id/furniture_price" />

</androidx.constraintlayout.widget.ConstraintLayout>